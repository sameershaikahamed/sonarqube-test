pipeline {
  agent any
  tools {
    maven 'maven' // Ensure Maven is configured in Global Tool Configuration
    jdk 'jdk17'   // Must match the name defined in Global Tool Configuration
  }
 
  stages {
    stage('Verify Java Version') {
      steps {
        sh '''
                    env | grep -e PATH -e JAVA_HOME
                    which java
                    java -version
                    mvn -v
                '''
      }
    }
